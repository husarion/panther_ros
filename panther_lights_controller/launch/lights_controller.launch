<launch>
  <arg name="test" default="false" />
  <arg name="user_animations_file" default="" />

  <node pkg="panther_lights_controller" name="lights_controller_node" type="controller_node.py" output="screen">
    <rosparam command="load" file="$(find panther_lights_controller)/config/panther_lights_animations.yaml" /> 
    <rosparam command="load" file="$(arg user_animations_file)" unless="$(eval user_animations_file == '')"/> 
    <param name="test" value="$(arg test)" />
  </node>

</launch>